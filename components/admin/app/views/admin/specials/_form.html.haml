= simple_form_for @special, remote: true do |f|
  .row
    .col-md-2
      = f.input :order, label: "Ordem", as: :string
    .col-md-3
      = f.association :property, label: "Nº imóvel", label_method: :id, include_blank: false
    .col-md-3
      = f.input :status,label: "Ativo?", as: :select, include_blank: false
  %hr/
  .row
    .col-md-12
      = f.submit "Salvar destaque", class: 'btn btn-success', data: { disable_with: t(:disable_with)}