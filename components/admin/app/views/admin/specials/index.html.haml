.panel-heading
  %h3
    %b Listagem de destaques
    %br
    %small 
      Gestão de imóveis destaque
%hr/
.panel-body
  .row
    .col-md-12
      %h4= link_to "adicionar destaque", new_special_path, class: 'btn btn-success btn-xs', remote: true
  %br/
  .row
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered
        %thead 
          %tr 
            %td Ordem
            %td Nº Imóvel
            %td Endereço
            %td Publicado?
            %td Ações
        %tbody.index-special
          = render 'index' 
          