.panel-heading
  %h3
    %b Listagem de usuários administradores
    %br
    %small 
      Lista de usuários internos
%hr/
.panel-body
  .row  
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered
        %thead 
          %tr
            %th Cod.
            %th Nome
            %th E-mail
            %th Credencial
            %th Situação
            %th Ação
        %tbody
          - @admins.each do |admin|
            %tr 
              %td.col-md-1= admin.id
              %td= admin.name
              %td= admin.email
              %td= admin.username
              %td.col-md-1= admin.status ? "ativo" : "inativo"
              %td.col-md-2
                - if admin.id != current_user.id
                  = link_to "", edit_admin_user_path(admin), class: 'btn btn-success btn-xs glyphicon glyphicon-pencil'
                  = link_to "", admin_user_path(admin), method: :delete, data: { confirm: t(:confirm)}, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove'
                - else
                  %span.label.label-primary
                    Você