.panel-heading
  %h3
    %b Listagem de domínios
%hr/
.panel-body
  .row
    .col-md-12
      %h4= link_to "+ adicionar domínio", new_region_scope_path, remote: true
  %br/
  .row
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered
        %thead 
          %tr 
            %td Nome
            %td Domínio
            %td Ações
        %tbody 
          - @regions.each do |region|
            %tr 
              %td.col-md-1= region.name
              %td.col-md-8= region.domain
              %td.col-md-2
                = link_to "editar", edit_region_scope_path(region), remote: true, class: 'btn btn-success btn-xs'
                = link_to "excluir", region_scope_path(region), method: :delete, data: {confirm: t(:confirm)}, class: 'btn btn-danger btn-xs'