= simple_form_for @button, remote: true do |f|
  .row
    .col-md-9
      = f.input :name
    .col-md-3
      = f.input :order, as: :string
  .row
    .col-md-12
      = f.input :link
  .row
    .col-md-6
      = f.input :image, as: :file
    .col-md-6
      = f.association :region_scope, label: "Dom√≠nio", include_blank: false
  %hr/
  .row
    .col-md-3
      = f.input :publish, as: :select, include_blank: false
  %hr/
  .row
    .col-md-12
      = f.submit "Salvar imagem", class: 'btn btn-success', data: { disable_with: t(:disable_with)}