= simple_form_for @project do |f|
  .row
    .col-md-4
      = f.association :customer, include_blank: false, label_method: :label_name
    .col-md-4
      = f.input :image_path, as: :file
  .row
    .col-md-12
      = f.input :name
  .row
    .col-md-12
      = f.input :description
  .row
    .col-md-2
      = f.input :status, as: :select, include_blank: false
  
  %hr/
  .row
    .col-md-12
      = f.submit "Salvar empreendimento", class: 'btn btn-success', data: { disable_with: t(:disable_button)}
      = link_to "Voltar para listagem", projects_path, class: 'btn btn-default'
