.panel-heading
  %h3
    %b Listagem de usuários externos
    %br
    %small 
      Lista de usuários externos
%hr/
.panel-body
  .row  
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered
        %thead 
          %tr
            %th Cod.
            %th Nome
            %th E-mail
            %th Credencial
            %th Situação
            %th Ação
        %tbody
          - @users.each do |user|
            %tr 
              %td.col-md-1= user.id
              %td= user.name.downcase
              %td= user.email.downcase
              %td= user.username.downcase
              %td.col-md-1= user.status ? "ativo" : "inativo"
              %td.col-md-2
                = link_to "", edit_customer_user_path(user), class: 'btn btn-success btn-xs glyphicon glyphicon-pencil'
                = link_to "", customer_user_path(user), method: :delete, data: { confirm: t(:confirm)}, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove'