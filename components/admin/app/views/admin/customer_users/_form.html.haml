= simple_form_for @user do |f|
  .row
    .col-md-12
      = f.input :name, input_html: { placeholder: "Digite um nome"}
  .row
    .col-md-12
      = f.input :bio, as: :text, input_html: { placeholder: "Digite uma bio"}
  .row
    .col-md-4
      = f.input :email, input_html: { placeholder: "Digite um e-mail para contato"}
    .col-md-4
      = f.input :telephone, input_html: { placeholder: "Somente números"}
    .col-md-4
      = f.input :avatar, as: :file
  - if f.object.new_record?
    %hr/
    .row
      .col-md-4
        = f.input :username, input_html: { placeholder: "Digite uma credencial"}
      .col-md-4
        = f.input :password, input_html: { placeholder: "6 à 20 caracteres"}
      .col-md-4
        = f.input :password_confirmation, input_html: { placeholder: "6 à 20 caracters"}
  %hr/
  .row
    .col-md-12
      = f.submit "Salvar usuário", class: 'btn btn-success', data: { disable_with: t(:disable_with)}
      = link_to "Voltar para listagem", admin_users_path, class: "btn btn-default"