.panel-heading
  %h3
    %b Listagem de imóveis
    %br
    %small 
      Lista de imóveis cadastros
    = link_to "adicionar imóvel", new_property_path, class: 'btn btn-xs btn-success pull-right'
%hr/
.panel-body
  .row  
    .col-md-12
      .row
        = simple_form_for url_for, method: :get do |f|
          .col-md-4
            = f.input :by_customer, label: 'Cliente', as: :select, collection: Customer.all.order(:id), label_method: :label_name, input_html: { name: 'by_customer'}, include_blank: "Todos", selected: params[:by_customer]
          .col-md-3
            = f.submit "Filtrar lista", name: nil, class: 'btn btn-primary', style: "margin-top: 24px"

  %hr/ 
  .row  
    .col-md-12
      %table.table-properties.table.table-striped.table-hover.table-bordered.table-condensed
        %thead 
          %tr
            %th.col-md-1 Cod.
            %th Cidade/Região
            %th Endereço
            %th Situação
            %th Tipo
            %th Ativo?
            %th Ação
        %tbody
          - @properties.each do |property|
            %tr
              %td.col-md-1= property.id
              %td.col-md-2= property.block.group.address.name if property.block.present? && property.block.group.present?
              %td.col-md-2= property.address
              %td.col-md-2= property.situation.humanize
              %td.col-md-2= property.type_property.humanize
              %td.col-md-1= property.status ? "sim" : "não"
              %td.col-md-4
                = link_to "", property_property_images_path(property), class: 'btn btn-warning glyphicon glyphicon-picture btn-xs'
                = link_to "", edit_property_path(property), class: 'btn btn-primary glyphicon glyphicon-pencil btn-xs'
                = link_to "", property_path(property), method: :delete, data: { confirm: t(:confirm)}, class: 'btn btn-danger glyphicon glyphicon-remove btn-xs'
            