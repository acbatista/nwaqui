%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title NWaqui
    = stylesheet_link_tag 'site/application', media: 'all'
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic,400italic", :rel => "stylesheet", :type => "text/css"}/
    = javascript_include_tag 'site/application'
    = csrf_meta_tags

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-75229662-1', 'auto');
      ga('send', 'pageview');

  %body{class: (controller.action_name == 'show') ? 'page-right-sidebar' : 'home page-fullwidth' }
    .site
      = render 'layouts/site/templates/nwaqui/mobile/header'
      = render 'layouts/site/templates/nwaqui/mobile/search' if "#{controller_name}/#{action_name}" != "properties/show"
      = yield
      = render 'layouts/site/templates/nwaqui/mobile/footer'
    #modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "modal", :role => "dialog", :tabindex => "-1", :style => 'z-index: 9999;'}
