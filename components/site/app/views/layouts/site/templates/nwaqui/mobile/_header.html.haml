%header.noo-header
  .main-nav-wrap.container
    .row{style: 'padding: 8px;'}
      .col-xs-6
        = link_to image_tag('/images/icon/botoes_topo_segmentos_03.png', width: '120x100'), site.root_path
      .col-xs-1
        = link_to image_tag('/images/icon/botoes_topo_segmentos_05.png', width: '28'), '#'
      .col-xs-2
        = link_to image_tag('/images/icon/botoes_topo_segmentos_07.png', width: '28'), '#'
      .col-xs-2
        - if bookmark_user.present?
          = link_to "<i class='glyphicon glyphicon-star'></i> Meus favoritos".html_safe, bookmarks_path, class: 'fav-button btn btn-primary'
          = link_to "<b>Encerrar acesso</b>".html_safe, logout_sessions_path, class: 'btn btn-danger'
        - else
          = link_to image_tag('/images/icon/botoes_topo_segmentos_05_2.png', width: '28'), new_session_path,  remote: true, class: 'pull-right'