.container
  .row
    .col-md-12
      / area do banner
  %br/
  %section
    .container
      .section-title
        %h3 Busca Exclusiva
    - Button.where(publish: true).each do |button| 
      .col-md-2
        = link_to image_tag(button.image), button.link.to_s
  
  %section#recent-.wrap.recent-properties
    .container
      .recent-properties-inner
        .section-title
          %br/
          %br/
          %br/
          %h3 ImÃ³veis Destaques
        .recent-properties-content
          %ul
            %li
              .property-row
                - Property.where(status:true).order('id DESC').limit(8).each do |property|
                  %article.hentry.has-featured.mod1_home
                    .property-featured
                      %a.content-thumb{:href => "#{property_path(property)}"}
                        - if property.images.present?
                          %img.attachment-property-thumb.featured-thumb-home{:alt => "", :src => "#{property.images.first.image_url}"}/
                        - else
                          %img.attachment-property-thumb.featured-thumb-home{:alt => "", :src => "https://nwaqui.s3.amazonaws.com/uploads/c0f5d31336b1d3c5c450cefebd261156.jpg"}/
                        %span.property-category.new_name
                          = property.address_name
                      .property-detail.mod-detail
                        .size
                          %span
                            = property.area
                        .bedrooms
                          %span
                            = property.rooms
                        .bathrooms
                          %span
                            = property.suit
                        .size{class: "starfav_#{property.id}"}
                          = star_fav(property)
