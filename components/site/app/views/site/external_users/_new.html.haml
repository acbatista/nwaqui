.modal-header
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
  %h4.modal-title
    %b Realizar meu cadastro
.modal-body
  %br/
  %br/

  .row
    .col-md-6{style: 'text-align: center'}
      = link_to "<i class='fa fa-facebook'></i> | Cadastrar usando o facebook".html_safe, '/auth/facebook', class: 'btn btn-facebook'
    .col-md-6{style: 'text-align: center'}
      = link_to "<i class='fa fa-google-plus'></i> | Cadastrar usando a conta Google".html_safe, '/auth/google_oauth2', class: 'btn btn-google-plus'

  %br/
  %hr/
  %br/
  .row
    .col-md-12
      = render 'form' 