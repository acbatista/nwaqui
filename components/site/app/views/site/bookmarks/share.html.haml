.panel
  .panel-body
    .container
      .recent-properties-inner
        .section-title{style: 'text-align: center'}
          %br/
          %h3 Lista de imóveis
          %b Link de compartilhamento
          = text_field :link, 'link', value: "#{request.original_url}", class: 'col-md-12'
      %br/
      %br/
      %br/
      %br/
      %table.table.table-striped.table-hover.table-bordered
        %thead
          %tr
            %th #
            %th Nome
            %th Endereço
            %th Link
        %tbody
          - @bookmarks.each_with_index do |bookmark, index|
            %tr 
              %td= index + 1
              %td= bookmark.property.name if bookmark.property.present?
              %td= bookmark.property.address if bookmark.property.present?
              %td= link_to "Acessar", property_path(bookmark.property) if bookmark.property.present? 