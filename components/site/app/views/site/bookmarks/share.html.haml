.panel
  .panel-body
    .container
      .recent-properties-inner
        .section-title{style: 'text-align: center'}
          = link_to "Ir para o site", site.root_path, class: 'btn btn-primary'
          %br/
          %br/
          %br/
          %h3
            Lista de imóveis
          %b Link de compartilhamento
          = text_field :link, 'link', value: "#{request.original_url}", class: 'col-md-12'
      %br/
      %br/
      %br/
      %br/
      %table.table.table-striped.table-hover.table-bordered
        %thead
          %tr
            %th #
            %th Tipo
            %th Estado
            %th Situação
            %th Endereço
            %th Link
        %tbody
          - @bookmarks.each_with_index do |bookmark, index|
            - if bookmark.property.present?
              %tr 
                %td= index + 1
                %td= bookmark.property.type_property.humanize
                %td= bookmark.property.situation.humanize
                %td= bookmark.property.commercial_situation.humanize
                %td= bookmark.property.address_name
                %td= link_to "Acessar", "http://#{bookmark.property.address.region_scope.domain}.com/site/imoveis/#{bookmark.property_id}", class: 'btn btn-success btn-xs'