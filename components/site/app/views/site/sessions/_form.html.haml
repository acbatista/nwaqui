= simple_form_for @session, remote: true do |f|
  .row
    .col-md-6
      %label
        %b E-mail
      = f.input :email, label: false, input_html: { placeholder: "Digite seu e-mail"}
    .col-md-6
      %label
        %b Senha
      = f.input :password, label: false, input_html: { placeholder: "Digite sua senha"}
  %hr/
  .row
    .col-md-12
      = f.submit "Acessar meus favoritos", class: 'btn btn-primary'
      = link_to "Esqueci minha senha", remember_sessions_path, remote: true, class: 'btn btn-inverse'