.modal-header
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
  %h4.modal-title
    %b Acessar meus favoritos
.modal-body
  %br/
  %br/

  .row
    .col-md-6{style: 'text-align: center'}
      = link_to "<i class='fa fa-facebook'></i> | Acessar usando o facebook".html_safe, '/auth/facebook', class: 'btn btn-facebook'
    .col-md-6{style: 'text-align: center'}
      = link_to "<i class='glyphicon glyphicon-pencil'></i> | Quero realizar meu cadastro".html_safe, new_external_user_path, remote: true, class: 'btn btn-primary'

  %br/
  %hr/
  %br/
  .row
    .col-md-12
      = render 'form' 