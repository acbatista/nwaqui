.panel-heading
  %h3
    %b Listagem de imóveis
    %br
    %small 
      Lista de imóveis cadastros
%hr/
.panel-body
  .row  
    .col-md-12
      .row
        = simple_form_for url_for, method: :get do |f|
          .col-md-4
            = f.input :by_customer, label: 'Cliente', as: :select, collection: Customer.where(id: current_user.customer_id).order(:id), label_method: :label_name, input_html: { name: 'by_customer'}, include_blank: "Todos", selected: params[:by_customer]
          .col-md-3
            = f.input :by_project, label: 'Empreendimento', as: :select, collection: Project.where(customer_id: current_user.customer_id).order(:id), input_html: { name: 'by_project'}, include_blank: "Todos", selected: params[:by_project]
          .col-md-3
            = f.submit "Filtrar lista", name: nil, class: 'btn btn-primary', style: "margin-top: 24px"

  %hr/ 
  .row  
    .col-md-12
      %table.table-properties.table.table-striped.table-hover.table-bordered.table-condensed
        %thead 
          %tr
            %th.col-md-1 Cod.
            %th Nome
            %th Cliente
            %th Empreendimento
            %th Situação
            %th Ação
        %tbody
          - @properties.each do |property|
            %tr
              %td.col-md-1= property.id
              %td.col-md-3= property.name
              %td.col-md-2= property.customer.label_name
              %td.col-md-3= property.project.name
              %td.col-md-1= property.status ? "ativo" : "inativo"
              %td.col-md-2
                = link_to "", property_path(property), class: 'btn btn-success glyphicon glyphicon-share-alt btn-xs'
                = link_to "", edit_property_path(property), class: 'btn btn-primary glyphicon glyphicon-pencil btn-xs'
                = link_to "", property_path(property), method: :delete, data: { confirm: t(:confirm)}, class: 'btn btn-danger glyphicon glyphicon-remove btn-xs'
            