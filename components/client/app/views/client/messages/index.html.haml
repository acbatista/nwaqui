.panel-heading
  %h3
    %b Listagem de mensagens
    %br
    %small 
      Lista de mensagens enviadas por visitantes
%hr/
.panel-body
  .row  
    .col-md-12
      .row
        = simple_form_for url_for, method: :get do |f|
          .col-md-3
            = f.input :by_situation, label: 'Lidas?', as: :select, input_html: { name: 'by_situation'}, include_blank: "Todos", selected: params[:by_situation]
          .col-md-3
            = f.submit "Filtrar lista", name: nil, class: 'btn btn-primary', style: "margin-top: 24px", data: { disable_with: t(:disable_with)}

  %hr/ 
  .row  
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered.table-condensed
        %thead 
          %tr
            %th.col-md-1 Cod.
            %th Nome
            %th E-mail
            %th Telefone
            %th Mensagem
            %th Data
            %th Situação
            %th Ação
        %tbody.index-messages
          = render 'index'