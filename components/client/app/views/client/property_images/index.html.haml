.panel-heading
  %h3
    %b Listagem de imagens - Imóvel ##{@property.id}
    %br
    %small 
      Gestão de imagens do imóvel
%hr/
.panel-body
  .row
    .col-md-12
      %h4= link_to "+ adicionar imagem", client.new_property_property_image_path(@property), remote: true
  %br/
  .row
    .col-md-12
      %table.table.table-striped.table-hover.table-bordered
        %thead 
          %tr 
            %td Ordem
            %td Nome
            %td Imagem
            %td Publicado?
            %td Ações
        %tbody.index-images
          = render 'index'
